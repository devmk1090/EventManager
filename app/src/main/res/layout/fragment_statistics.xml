<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StatisticsFragment">
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_semibold"
            android:background="@drawable/custom_textview"
            android:textSize="20sp"
            android:id="@+id/categoryText"
            android:text=" 경조사별 통계 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_semibold"
            android:id="@+id/relationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_textview"
            android:text=" 관계별 통계 "
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/asform_rev_background"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_regular"
            android:text="전   체"
            android:layout_width="140dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:textColor="@color/black_5"
                android:fontFamily="@font/pretendard_semibold"
                android:text="받은 돈 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/black_5"
                android:fontFamily="@font/pretendard_semibold"
                android:text="나간 돈 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/black_5"
                android:fontFamily="@font/pretendard_semibold"
                android:text="받음 - 나감 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="textEnd"
                android:id="@+id/inTotalMoney"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                android:text="100000"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAlignment="textEnd"
                android:id="@+id/outTotalMoney"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                android:text="100000"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAlignment="textEnd"
                android:id="@+id/inOutTotal"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                android:text="100000"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_regular"
                android:text="원"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_regular"
                android:text="원"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_regular"
                android:text="원"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wholeLayout"
        android:layout_gravity="center"
        android:padding="5dp"
        android:background="@drawable/asform_rev_background"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="5dp"
            android:id="@+id/categoryLayout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:id="@+id/categoryLayout2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="5dp"
            android:id="@+id/relationLayout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:id="@+id/relationLayout2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/categoryPieChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.github.mikephil.charting.charts.PieChart>
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/relationPieChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.github.mikephil.charting.charts.PieChart>
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/categoryInPieChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.github.mikephil.charting.charts.PieChart>
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/relationInPieChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.github.mikephil.charting.charts.PieChart>
    </RelativeLayout>
</LinearLayout>
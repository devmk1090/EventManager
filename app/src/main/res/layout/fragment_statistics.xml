<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StatisticsFragment">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/custom_textview"
            android:textSize="20dp"
            android:id="@+id/categoryText"
            android:text=" 경조사별 통계 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="13dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/custom_textview"
            android:textSize="20dp"
            android:id="@+id/relationText"
            android:text=" 관계별 통계 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/linearborder2"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="전   체"
            android:layout_width="140dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="나간 돈 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="받은 돈 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="나감 - 받음 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textAlignment="textEnd"
                android:id="@+id/outTotalMoney"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="100000"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAlignment="textEnd"
                android:id="@+id/inTotalMoney"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="100000"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAlignment="textEnd"
                android:id="@+id/inOutTotal"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="100000"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="원"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="원"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="원"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/categoryLayout"
        android:background="@drawable/totalborder"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/relationLayout"
        android:background="@drawable/totalborder"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/categoryPieChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.github.mikephil.charting.charts.PieChart>
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/relationPieChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.github.mikephil.charting.charts.PieChart>
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/categoryInPieChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.github.mikephil.charting.charts.PieChart>
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/relationInPieChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.github.mikephil.charting.charts.PieChart>
    </RelativeLayout>
</LinearLayout>

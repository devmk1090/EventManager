<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/linearborder"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:maxLength="6"
            android:textAlignment="textEnd"
            android:padding="5dp"
            android:id="@+id/getNameData"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="이름"
            android:layout_width="140dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAlignment="textEnd"
            android:padding="5dp"
            android:id="@+id/getCategoryData"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="결혼식"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAlignment="textEnd"
            android:padding="5dp"
            android:id="@+id/getRelationData"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="친구"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@drawable/linearborder"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="textEnd"
            android:padding="5dp"
            android:id="@+id/getCalendarData"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="2019/9/24"
            android:layout_width="140dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:maxLength="10"
            android:textAlignment="textEnd"
            android:id="@+id/getMoneyData"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="100000"
            android:inputType="number"
            android:layout_width="212dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:padding="2dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="원"
            android:inputType="number"
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
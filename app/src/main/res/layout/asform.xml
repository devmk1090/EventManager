<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/asform"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:id="@+id/getNameData"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="이름"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:id="@+id/getCategoryData"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="결혼식"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:id="@+id/getRelationData"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="친구"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/asform"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:id="@+id/getCalendarData"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="2019/9/24"
            android:layout_width="140dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAlignment="textEnd"
            android:layout_marginLeft="15dp"
            android:id="@+id/getMoneyData"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="100,000"
            android:inputType="number"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingLeft="2dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="원"
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/asform"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/getMemoData"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="일이삼사오육칠팔구십십이십사오"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OutActivity">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/totalborder"
            android:gravity="center_vertical"
            android:layout_margin="7dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:text=" 날짜 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:textColor="#ffffff"
                android:background="@drawable/custom_textview"
                android:layout_marginRight="20dp"
                android:id="@+id/calendarButton"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text=" 날짜 선택 "
                android:layout_width="wrap_content"
                android:layout_height="30dp"/>
            <TextView
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:id="@+id/calendarData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/totalborder"
            android:gravity="center_vertical"
            android:layout_margin="7dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:text=" 이름 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:maxLength="7"
                android:id="@+id/nameData"
                android:inputType="text"
                android:gravity="center"
                android:hint="이름을 입력하세요"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/totalborder"
            android:gravity="center_vertical"
            android:layout_margin="7dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:background="@drawable/custom_textview"
                android:id="@+id/categoryData"
                android:hint=" 경조사를 선택하세요 "
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/totalborder"
            android:gravity="center_vertical"
            android:layout_margin="7dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:background="@drawable/custom_textview"
                android:layout_gravity="center"
                android:id="@+id/relationData"
                android:hint=" 관계를 선택하세요 "
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="7dp"
            android:background="@drawable/totalborder"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text=" 금액 : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:maxLength="10"
                    android:id="@+id/moneyData"
                    android:textStyle="bold"
                    android:hint="직접 입력 or 선택하세요"
                    android:inputType="number"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <Button
                    android:id="@+id/tenButton"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:text="10,000"
                    android:textColor="#ffffff"
                    android:background="@drawable/custom_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/fiftyButton"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:text="50,000"
                    android:textColor="#ffffff"
                    android:background="@drawable/custom_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/hundredButton"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:text="100,000"
                    android:textColor="#ffffff"
                    android:background="@drawable/custom_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/resetButton"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:text="Reset"
                    android:textColor="#ffffff"
                    android:background="@drawable/custom_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/totalborder"
            android:gravity="center_vertical"
            android:layout_margin="7dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text=" 메모 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/memoData"
                android:maxLength="15"
                android:textStyle="bold"
                android:textSize="20dp"
                android:hint=" 15자 이내의 간단한 메모"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:id="@+id/saveButton"
            android:background="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="저   장"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        ads:adUnitId="@string/ad_unit_id"
        ads:adSize="SMART_BANNER"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
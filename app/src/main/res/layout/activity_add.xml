<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Date : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:onClick="OnClickHandler"
                android:layout_marginRight="20dp"
                android:id="@+id/calendarButton"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="날짜 선택"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:hint="Date"
                android:id="@+id/calendarData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Name : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/nameData"
                android:inputType="text"
                android:gravity="center"
                android:hint="Input Name"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Category : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:layout_gravity="center"
                android:entries="@array/category_spinner"
                android:id="@+id/categorySpinner"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/categoryData"
                android:text="Empty"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Relation : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:layout_gravity="center"
                android:entries="@array/relation_spinner"
                android:id="@+id/relationSpinner"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/relationData"
                android:text="Empty"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Money : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/moneyData"
                android:textStyle="bold"
                android:hint="Input Money"
                android:inputType="number"
                android:textSize="20dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:id="@+id/tenButton"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#00B0FF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="10,000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/fiftyButton"
                android:layout_weight="1"
                android:background="#00B0FF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="50,000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/hundredButton"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#00B0FF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="100,000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/resetButton"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#00B0FF"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"
            android:id="@+id/saveButton"
            android:background="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Save"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>